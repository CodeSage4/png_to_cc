<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity3">



        <TextView
            android:id="@+id/signupText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="signup"
            android:textAlignment="center"
            android:layout_margin="50dp"
            android:textColor="@color/lavender"
            android:textSize="50sp"
            android:textStyle="bold" />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/signupText"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/custom_edited_text"
        android:drawableRight="@drawable/outline_email_24"
        android:drawablePadding="8dp"
        android:hint="  Enter your email id"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textSize="23sp" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/email"
            android:background="@drawable/custom_edited_text"
            android:drawableRight="@drawable/round_remove_red_eye_24"
            android:drawablePadding="8dp"
            android:hint="  Create password"
            android:inputType="textPassword"
            android:layout_margin="20dp"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textSize="23sp" />

        <EditText
            android:id="@+id/rpassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/password"
            android:background="@drawable/custom_edited_text"
            android:drawableRight="@drawable/baseline_lock_24"
            android:drawablePadding="8dp"
            android:hint="  Re-enter Password"
            android:inputType="textPassword"
            android:layout_margin="20dp"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textSize="23sp" />

        <Button
            android:id="@+id/loginButton"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@id/rpassword"
            android:layout_margin="13dp"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/lavender"
            android:text="Signup"
            android:textSize="20sp"
            app:cornerRadius="40dp"></Button>

    <Button
        android:id="@+id/signupButton"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/loginButton"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/lavender"
        android:text="Login"
        android:textSize="20sp"
        app:cornerRadius="40dp"></Button>


</RelativeLayout>